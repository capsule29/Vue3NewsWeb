{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue",
    ],
    "exclude": [
        "src/**/__tests__/*",
        "src/router/*.ts", // 自定义
        "src/store/*.ts", // 自定义
    ],
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "baseUrl": "./src/",
        // "paths": { // 自定义
        // "@/*": [
        //     "./src/*"
        // ],
        // "@api/*": [
        //     "./src/api/*"
        // ],
        // },
        "allowImportingTsExtensions": true, // 自定义
        "noEmit": true, // 自定义
        "declaration": true, //自定义
        "declarationDir": "./declaration", //自定义
    }
}