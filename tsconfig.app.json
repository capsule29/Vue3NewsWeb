{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue",
        "@/components/UserInfo.vue",
        "@/components/OptionBtn.vue"
        // "src/api/**/*.ts"
    ],
    // "files": ["src/api/authority/index.ts"],
